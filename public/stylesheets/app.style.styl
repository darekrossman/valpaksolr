@import 'nib'
global-reset()
@import 'app.config'

@import 'vp.buttons'
@import 'vp.fx'
@import 'vp.forms'

@import 'app.header'
@import 'app.tile'



html
  height 100%

body
  width 100%
  overflow-x hidden
  padding 0
  margin 0
  height 100%
  font-family app-font
  background #FFF
  transform translateZ(0)


// Primary Column
// ---------------------------------
.primary
  clearfix()
  overflow hidden
  position absolute
  top header-height
  bottom 0
  right 0
  left secondary-width
  border-left 1px solid gray(10)
  background #BBB
  background-size 100% auto


// Secondary Column
// ---------------------------------
.secondary
  clearfix()
  position absolute
  top header-height
  bottom 0
  left 0
  width secondary-width
  padding-top 20px



// Navigation Styling
// ---------------------------------
.n1
  a
    font-size 18px
    line-height 1.7em
    display block
    padding 0 20px
    color #333
    text-decoration none


// Top-level View Styling
// ---------------------------------
.toolbar-view
  clearfix()
  position relative
  background-color gray(4)
  border-bottom 1px solid gray(12)
  border-top 0
  border-right 0
  z-index 9997
  line-height toolbar-height
  padding 0

  div:nth-child(1)
    padding-left 20px
    float left
    color #00407b

.scroll-view
  -webkit-backface-visibility hidden
  overflow-x hidden
  overflow-y scroll
  position absolute
  top toolbar-height
  left 0
  right 0
  bottom 0
  z-index 9996
  -webkit-overflow-scrolling: touch;
  perspective 400px
  ul
    clearfix()
    // transform translateZ(0px)




[data-control="layout"]
  position absolute
  right 20px



.loader
  // opacity .9
  background transparent
  absolute top left
  height 100%
  width 100%
  z-index 9999
  transition-property opacity
  & > div
    padding: 20px 30px
    background #FFF
    border-radius 2px
    text-align center
    position absolute
    top 50%
    left 50%
    margin -45px 0 0 -64px
    font-size: 12px
    color #00407b
  p
    margin-top: 8px
  img
    width 128px
    height auto


.media
  .media-img
    float left
    margin-right 10px

  .media-body
    overflow hidden


strong
  font-weight 800

  &.demi
    font-weight 700

