#app > header

  if s("fixed-header")
    // position fixed
    z-index: 9998

  position relative
  width 100%
  height header-height

  border-bottom 1px solid gray(10)

  // Header wrapper
  div:first-child

    .app-logo
      figure 80px
      position absolute
      top 50%
      left 20px
      margin-top -19px

    [coupon-search]
      position absolute
      top 10px
      // left secondary-width
      right 20px
      input
        width 14em
        margin 0
        padding 0
        vertical-align top
        padding 5px 6px
        font-size 16px
        border 1px solid gray(20)
        border-radius 2px
        margin-right 5px
        transition width .2s .2s ease-out
        &:focus
          outline none
          width 24em
          border-color gray(40)
      button
        button(#007fb7)
        vertical-align top
        line-height 20px
