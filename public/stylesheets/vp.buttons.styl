button(shade = light)
  font-family: 'Open Sans', sans-serif
  border: 0
  margin 0
  display: inline-block
  //box-shadow: inset 0px 1px 0px rgba(255, 255, 255, .1)
  border-radius: 2px
  border: 0px solid gray(80)
  //background: linear-gradient(top, lighten(color, 10%), color)
  background darken(c1, 5)
  font-size: 14px
  font-weight: 300
  line-height: 1.5em
  padding: .3em 1.2em
  text-decoration: none

 	&.toggled
 	  background: c5


  if shade == dark
    color: #333
  else
    color: #FFF
    border-color: #FFF



