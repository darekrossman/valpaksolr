button(color = gray(4))
  font-family: 'Open Sans', sans-serif
  border: 0
  margin 0
  display: inline-block
  box-shadow: inset 0px 1px 0px rgba(255, 255, 255, .1)
  border-radius: 2px
  border: 1px solid darken(color, 8%)
  background: linear-gradient(top, lighten(color, 10%), color)
  font-size: 14px
  font-weight: 300
  line-height: 1.5em
  padding: .3em 1.2em
  text-decoration: none
  &:hover
    background: linear-gradient(top, lighten(color, 10%), lighten(color, 10%))

  if light(color)
    color: #333
  else
    color: #FFF

  &.toggled
    background darken(color, 4%)
    box-shadow inset 0 0 1px rgba(0, 0, 0, 0.1)

[class^="icon-"]:before,
[class*=" icon-"]:before
  font-size: 16px

button
  button()


.button-group
  button
    padding-left 8px
    padding-right 8px
    border-left-width 0
    border-radius 0

    &:first-child
      border-right-width 1px
      border-left-width 1px
      border-radius 2px 0 0 2px

    &:last-child
      border-radius 0 2px 2px 0




